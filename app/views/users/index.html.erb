<%= render "shared/header" %>
<main>
  <div class="container">
    <div class="table-responsive my-5">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>名前</th>
            <th>フリガナ</th>
            <th>メールアドレス</th>
            <th>貸出</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.where.not(id: current_user.id).each do |user| %>
            <tr onclick='window.location="<%= '/users/' + user.id.to_s %>"'>
              <th ><%= user.name %></th>
              <th><%= user.kana_name %></th>
              <th><%= user.email %></th>
              <% if Borrow.where(user_id: user, borrowing_book: 1).present? %>
                <th>貸し出し中</th>
              <% else %>
                <th></th>
              <% end %>
              <th><%= link_to "編集", edit_user_path(user), class: "btn btn-warning" %></th>
              <th><%= link_to "削除", user_path(user), method: :delete, class: "btn btn-danger" %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</main>
<%= render "shared/footer" %>