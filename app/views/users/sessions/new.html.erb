<%= render "shared/header" %>
<div class="container">
  <h2 class="pt-5 text-center">ログイン</h2>

  <%= form_with model: @user, url: user_session_path, local: true, class: "mt-3 mx-auto" do |f| %>
    <div class='login-flash-message text-center text-danger'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <div class="field col-md-4 mx-auto">
      <%= f.label :email, "メールアドレス", class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field col-md-4 mx-auto">
      <%= f.label :password, "パスワード", class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
    
    <% if devise_mapping.rememberable? %>
      <div class="field text-center mt-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions d-flex justify-content-center my-5">
      <%= f.submit "ログイン", class: "col-md-2 btn btn-success" %>
    </div>
  <% end %>
</div>
<%= render "shared/footer" %>