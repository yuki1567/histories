<%= render "shared/header" %>
<div class= "container">
  <h2 class= "pt-5 text-center">新規登録</h2>

  <%= form_with model: @user, url: user_registration_path, local: true, class: "mt-3" do |f| %>
    <%= render "shared/error_messages", model: @user %>
    
    <div class="field col-md-4 mx-auto">
      <%= f.label :name, "名前", class: "form-label" %><br />
      <%= f.text_field :name, class: "form-control" %>
    </div>
  
    <div class="field col-md-4 mx-auto">
      <%= f.label :kana_name, "フリガナ", class: "form-label" %><br />
      <%= f.text_field :kana_name, class: "form-control" %>
    </div>
  
    <div class="field col-md-4 mx-auto">
      <%= f.label :email, "メールアドレス", class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  
    <div class="field col-md-4 mx-auto">
      <%= f.label :password, "パスワード", class: "form-label" %>
      <% if @minimum_password_length %>
      <em>(最低6文字以上必要です)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
  
    <div class="field col-md-4 mx-auto">
      <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <%= f.fields_for :cart do |s| %>
      <div class="field">
        <%= s.hidden_field :id, value: @cart.id %>
      </div>
    <% end %>
  
  
    <div class="actions d-flex justify-content-center my-5">
      <%= f.submit "登録", class: "col-md-2 btn btn-success" %>
    </div>
   
  <% end %>
</div>
<%= render "shared/footer" %>