<% breadcrumb :edit_user, @user %>
<%= render "shared/breadcrumbs" %>
<div class= "container">
  <h2 class= "pt-5 text-center">ユーザー情報の変更</h2>

  <%= form_with model: @user, local: true, class: "mt-3" do |f| %>
    <%= render "shared/error_messages", model: @user %>
    
    <div class="field col-md-4 mx-auto">
      <%= f.label :name, "名前", class: "form-label" %><br />
      <%= f.text_field :name, class: "form-control" %>
    </div>
  
    <div class="field col-md-4 mx-auto">
      <%= f.label :kana_name, "フリガナ", class: "form-label" %><br />
      <%= f.text_field :kana_name, class: "form-control" %>
    </div>
  
    <div class="field col-md-4 mx-auto">
      <%= f.label :email, "メールアドレス", class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  
    <div class="actions d-flex justify-content-center my-5">
      <%= f.submit "変更", class: "col-md-2 btn btn-success" %>
    </div>
   
  <% end %>
</div>