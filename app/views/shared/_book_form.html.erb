<%= form_with model: book, local: true, class: "mt-3" do |f| %>
  <%= render "shared/error_messages", model: book %>

  <div class="field col-md-4 mt-5 mb-3 mx-auto">
    <%= f.label :image, "画像", for: "formFile", class: "form-label" %>
    <%= f.file_field :image, class: "form-control", type: "file", id: "formFile" %>
  </div>

  <div class="field col-md-4 mb-3 mx-auto">
    <%= f.label :title, "タイトル", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="field col-md-4 mb-3 mx-auto">
    <%= f.label :author, "作者", class: "form-label" %>
    <%= f.text_field :author, class: "form-control" %>
  </div>

  <div class="field col-md-4 mb-3 mx-auto">
    <%= f.label :content, "説明", class: "form-label" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="field col-md-4 mb-3 mx-auto">
    <%= f.label :category_id, "カテゴリー", class: "form-label" %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {include_blank: "---"}, {class:"select-box form-select", id:"category"}) %>
  </div>

  <div class="field col-md-4 mb-3 mx-auto">
    <%= f.label :quantity, "在庫数", class: "form-label" %>
    <%= f.number_field :quantity, class: "form-control" %>
  </div>
  
  <div class="actions d-flex justify-content-center my-5">
    <%= f.submit "登録", class: "col-md-2 btn btn-success" %>
  </div>
<% end %>